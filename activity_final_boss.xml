                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Hire Mercenaries
(Financial 70+)"
                android:backgroundTint="#006400"/>

            <!-- Magic Seal -->
            <Button
                android:id="@+id/btnMagicSeal"
