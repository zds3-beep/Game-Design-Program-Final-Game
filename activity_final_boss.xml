                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”« Use Modern Firearms
(Equipment 70+)"
                android:backgroundTint="#2F4F4F"/>

            <!-- Befriend -->
            <Button
                android:id="@+id/btnBefriend"
