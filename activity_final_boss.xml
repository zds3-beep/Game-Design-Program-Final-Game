                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ¨ Seal with Magic
(Magical 70+)"
                android:backgroundTint="#4B0082"/>

            <!-- Firearms -->
            <Button
                android:id="@+id/btnFirearms"
