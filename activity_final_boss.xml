<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvBossTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THE FINAL ENCOUNTER"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:shadowColor="#FF0000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Boss Description -->
    <TextView
        android:id="@+id/tvBossDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="An ancient entity stands before you, cloaked in darkness and crowned with stars. This is the moment your entire journey has led to. Choose your approach wisely..."
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvBossTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/imgBoss"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/final_boss_silhouette"
        android:contentDescription="Final Boss"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/tvBossDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:alpha="0.9"/>

    <!-- Scrollable Options Container -->
    <ScrollView
        android:id="@+id/scrollOptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imgBoss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Section: Single Stat Approaches -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIRECT APPROACHES"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFD700"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"/>

            <!-- Hand to Hand -->
            <Button
                android:id="@+id/btnHandToHand"
                style="@style/FinalBossButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš”ï¸ Fight Hand-to-Hand
(Martial 70+)"
                android:backgroundTint="#8B0000"/>

            <!-- Army -->
