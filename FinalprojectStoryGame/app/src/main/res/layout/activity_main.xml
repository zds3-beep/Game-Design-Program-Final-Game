<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp">

    <!-- Stat Panel -->
    <LinearLayout
        android:id="@+id/statPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/MartialPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martial Power: 1" />

        <TextView
            android:id="@+id/EquipmentPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipment Power: 1" />

        <TextView
            android:id="@+id/FinancialPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Power: 1" />

        <TextView
            android:id="@+id/SocialPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Power: 1" />

        <TextView
            android:id="@+id/RankPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank Power: 1" />

        <TextView
            android:id="@+id/MagicalPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magical Power: 1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Attacked by Dragon" />

        <Button
            android:id="@+id/myButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Finds Treasure" />

        <Button
            android:id="@+id/myButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero is attacked by Bandits" />

        <Button
            android:id="@+id/myButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Makes an ally" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>